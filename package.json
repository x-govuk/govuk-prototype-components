{
  "name": "govuk-prototype-components",
  "version": "1.0.0",
  "description": "Common and experimental components that are not yet part of the GOV.UK Design System",
  "keywords": [
    "govuk",
    "design system",
    "prototyping",
    "components"
  ],
  "homepage": "https://github.com/x-govuk/govuk-prototype-components#readme",
  "bugs": {
    "url": "https://github.com/x-govuk/govuk-prototype-components/issues"
  },
  "license": "MIT",
  "files": [
    "x-govuk",
    "govuk-prototype-kit.config.json"
  ],
  "main": "x-govuk/all.js",
  "module": "x-govuk/all.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/x-govuk/govuk-prototype-components.git"
  },
  "scripts": {
    "prepublishOnly": "rollup --config",
    "prebuild": "rimraf public",
    "build": "eleventy --quiet",
    "start": "eleventy --serve --quiet",
    "lint": "standard && stylelint 'x-govuk/**/*.scss'",
    "test": "npm run lint"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.0",
    "accessible-autocomplete": "^2.0.4",
    "eventslibjs": "^1.2.0",
    "govuk-eleventy-plugin": "^3.0.0",
    "govuk-frontend": "^4.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "nunjucks": "^3.2.3",
    "rollup": "^2.78.0",
    "standard": "^17.0.0",
    "stylelint": "^14.6.1",
    "stylelint-config-gds": "^0.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": {
    ".": {
      "sass": "./x-govuk/all.scss",
      "import": "./x-govuk/all.mjs",
      "require": "./x-govuk/all.js"
    }
  },
  "c8": {
    "reporter": [
      "text",
      "lcovonly"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-gds/scss"
  },
  "standard": {
    "ignore": [
      "/x-govuk/all.js"
    ]
  }
}
